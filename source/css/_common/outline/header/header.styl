// Header Section
// --------------------------------------------------
#header {
  margin: 0 auto;
  position: relative;
  width: 100%;
  height: 100vh;
  text-shadow: 0rem .2rem .3rem alpha(#000, .5);
  color: var(--header-text-color);

  a:hover {
    color: currentColor;
  }
}
#header::before {
  background: url(../images/dot.jpg);
  content: '';
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -4;
  background-attachment: fixed;
}

@import 'image';
@import 'nav';
@import 'brand';
@import 'tool';
@import 'waves';
